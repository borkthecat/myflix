<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profiles - MyFlix</title>
    <link rel="stylesheet" href="/styles/profiles.css" />
  </head>

  <body>
    <!-- Navbar -->
    <header class="nav">
      <img src="/images/logo.png" alt="MyFlix Logo" class="logo" />
    </header>

    <!-- Main Content -->
    <main class="container">
      <h1 class="title">Who's watching?</h1>
      <div class="profiles">
        <a href="/home?user=user1" class="profile">
          <img src="/images/user1.jpg" alt="User 1" />
          <span>User 1</span>
        </a>
        <a href="/home?user=user2" class="profile">
          <img src="/images/user2.jpg" alt="User 2" />
          <span>User 2</span>
        </a>
        <a href="/home?user=user3" class="profile">
          <img src="/images/user3.jpg" alt="User 3" />
          <span>User 3</span>
        </a>
        <a href="/home?user=user4" class="profile">
          <img src="/images/user4.jpg" alt="User 4" />
          <span>User 4</span>
        </a>
      </div>
    </main>

    <script>
      // Save profile choice in localStorage
      document.querySelectorAll(".profile").forEach((link) => {
        link.addEventListener("click", () => {
          const user = new URL(link.href).searchParams.get("user");
          localStorage.setItem("selectedUser", user);
        });
      });
    </script>
  </body>
</html>
