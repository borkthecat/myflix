<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Intro Test</title>
    <style>
      body {
        background: #141414;
        margin: 0;
        overflow: hidden;
      }

      .logo-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        width: 100vw;
      }

      .logo-img {
        max-width: 80%;
        height: auto;
        opacity: 1;
        transform: scale(1);
      }

      .animate {
        animation: zoomStretchFade 2s forwards ease-in;
      }

      @keyframes zoomStretchFade {
        0% {
          opacity: 1;
          transform: scale(1, 1);
        }
        60% {
          opacity: 1;
          transform: scale(2.5, 3);
        }
        100% {
          opacity: 0;
          transform: scale(3.5, 4);
        }
      }
    </style>
  </head>

  <body>
    <div class="logo-wrapper">
      <img src="/images/title.png" alt="Intro Logo" class="logo-img" />
      <audio id="introSound" src="/tadum.mp3" preload="auto"></audio>
    </div>

    <script>
      const audio = document.getElementById("introSound");
      const logo = document.querySelector(".logo-img");

      document.body.addEventListener(
        "click",
        async () => {
          // reset and play sound
          audio.pause();
          audio.currentTime = 0;
          try {
            await audio.play();
          } catch (err) {
            console.warn("Playback blocked:", err);
          }

          // trigger animation
          logo.classList.add("animate");

          // redirect after animation
          setTimeout(() => {
            window.location.href = "/profiles";
          }, 5000);
        },
        { once: true }
      );
    </script>
  </body>
</html>
